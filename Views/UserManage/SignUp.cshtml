
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .body {
            background-image: url('@Url.Content("~/images/homePg.jpg")');
            background-size: cover;
        }
    </style>

</head>
<body class="body">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <form class="bg-light p-4 rounded shadow" method="post">
            <h2>Sign Up</h2>
            <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="Email" required />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input type="password" class="form-control" name="Password" required />
            </div>
            <div class="mb-3">
                <label>First Name</label>
                <input type="text" class="form-control" name="FirstName" required />
            </div>
            <div class="mb-3">
                <label>Last Name</label>
                <input type="text" class="form-control" name="LastName" required />
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
            <button class="btn btn-primary"><a href="@Url.Action("Login", "UserManage")"></a>Login</button>
            <hr>
            <!--
            <button class="btn btn-danger">Sign in with Google</button>
            <button class="btn btn-primary">Sign in with Facebook</button>
            -->
            
        </form>
    </div>
</body>
</html>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .body {
            background-image: url('@Url.Content("~/images/homePg.jpg")');
            background-size: cover;
        }
    </style>

</head>
<body class="body">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <form class="bg-light p-4 rounded shadow" method="post">
            <h2>Login</h2>
            <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="Email" required />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input type="password" class="form-control" name="Password" required />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <button class="btn btn-primary"><a href="@Url.Action("SignUp", "UserManage")"></a>SignUp</button>
            
            <a href="/UserManage/ChangePassword" class="d-block mt-3">Forgot Password?</a>

            <hr>
            <!--
            <button class="btn btn-danger">Sign in with Google</button>
            <button class="btn btn-primary">Sign in with Facebook</button>
            -->
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
@model Blog_Website.Models.Blogg_Model

<div class="container mt-5">
    <h1 class="text-danger">Delete Post</h1>
    <!-- <p>Are you sure you want to delete this post?</p> -->

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">@Model.BlogTitle</h2>
            <p class="card-text"><strong>Author:</strong> @Model.Name</p>
            <p class="card-text"><strong>Category:</strong> @Model.Category</p>
            <p class="card-text">@Model.Content</p>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Post Image" class="img-fluid" />
            }
        </div>
    </div>

    <form asp-action="DeletePostConfirmed" asp-controller="DashBoard" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a href="@Url.Action("Index", "DashBoard")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>

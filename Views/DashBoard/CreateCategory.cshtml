@model Blog_Website.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Create Category</h2>
    
    <form asp-action="CreateCategory" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required />
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="4">@Model?.Description</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="@Url.Action("Categories", "DashBoard")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
